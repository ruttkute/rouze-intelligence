        </section>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Rouze Intelligence. All rights reserved.</p>
    </footer>

    <script>
        function selectVertical(vertical) {
            console.log(`Selected vertical: ${vertical}`);
            window.location.href = `/questionnaire/${vertical}`;
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('Vertical Selector Page Loaded');
        });
    </script>
