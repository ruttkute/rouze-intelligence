<body class="vertical-selector-page">
    <!-- Navigation -->
    <nav class="navigation">
        <div class="nav-container">
            <a href="/" class="logo">
                <span class="logo-text">ROUZE</span>
                <span class="logo-accent"></span>
            </a>
            <div class="nav-links">
                <a href="/">Home</a>
